<section class="screencasts-content-list clearfix">
  <div class="container">

    <%- @casts.all.each do |cast| %>
      <div class="row screencast-item">
        <%= link_to cast_path(cast) do %>
          <div class="content-screencast-image">
            <div class="image-hover"></div>
            <%= image_tag youtube_image_preview(cast.url), width: "255px", height: "150px" %>
          </div>
          <span class="screencast-date">
            Adicionado em <%= cast.created_at.strftime("%d/%m/%Y")%>
          </span>
          <h3><%= cast.name %></h3>
          <p>
            <%= cast.description %>
            <!-- <span class="time-count">
              Duração: 23 minutos
            </span> -->
          </p>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
